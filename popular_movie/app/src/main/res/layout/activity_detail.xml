<?xml version="1.0" encoding="utf-8"?>


    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailActivity">

        <include
            android:id="@+id/movie_detail_top"
            layout="@layout/movie_detail_top"
            android:layout_width="match_parent"
            android:layout_height="276dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <include
            android:id="@+id/movie_detail_bottom"
            layout="@layout/movie_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/movie_detail_top"
            app:layout_constraintLeft_toLeftOf="@id/movie_detail_top"
            app:layout_constraintTop_toBottomOf="@id/movie_detail_top" />

    </android.support.constraint.ConstraintLayout>
